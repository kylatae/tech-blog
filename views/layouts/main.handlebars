      <button id="logout" class="btn-no-style">Logout</button>
    {{else}}
      <a href="/login" >Login</a>
    {{/if}}
  </div>
  </nav>

  {{!-- Setting up body of handlebars pages --}}
  <main>
    <div class="justify-content-center mx-auto rate">
      {{{body}}}
    </div>
  </main>
  {{#if loggedIn}}
    <script src="/js/logout.js"></script>
  {{/if}}
